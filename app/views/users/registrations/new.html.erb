<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>


<div class="w-4/12 m-auto mt-8 bg-white rounded-md shadow">
  <div class="flex flex-col justify-center min-h-full px-6 py-4 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-sm">
      <h2
        class="mt-10 text-2xl font-bold leading-9 tracking-tight text-center text-gray-900 "
      >註冊</h2>
    </div>

    <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <form class="space-y-6" action="#" method="POST">
        <div>

          <div class="mt-2">
             <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"w-full px-4 py-4 text-sm font-medium placeholder-gray-500 border border-gray-200 rounded-lg bg-wight hover:bg-gray-50 focus:outline-none focus:border-gray-400 focus:bg-slate-100", placeholder:"Email" %>
          </div>
        </div>
<br>
        <div>

          <div>
            <% if @minimum_password_length %>
              <em class="inline-block px-2 mb-4 text-xs font-medium leading-none tracking-wide text-gray-600 transform translate-y-1/2 bg-white">
                (最少<%= @minimum_password_length %>位)</em>
              <% end %><br />

              <%= f.password_field :password, autocomplete: "new-password", class:"w-full px-4 py-4 mb-4 text-sm font-medium placeholder-gray-500 border border-gray-200 rounded-lg bg-wight hover:bg-gray-50 focus:outline-none focus:border-gray-400 focus:bg-slate-100", placeholder:"密碼" %>

          </div>
          <div>
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"w-full px-4 py-4 mb-4 text-sm font-medium placeholder-gray-500 border border-gray-200 rounded-lg bg-wight hover:bg-gray-50 focus:outline-none focus:border-gray-400 focus:bg-slate-100", placeholder:"確認密碼" %>


          </div>

        </div>

        <div >
           <%= f.submit "註冊", class:"flex justify-center w-full px-2 py-4 text-sm font-semibold leading-6 text-white bg-indigo-600 rounded-md shadow-sm hover:bg-white hover:text-indigo-600 transition-all duration-300 ease-in-out"

           %>

        </div>
      </form>

      <div class="my-12 text-center">
       <div class="divider">
或是由以下登入
        </div>
      </div>
        <%- resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "#{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class:"flex items-center justify-center w-full py-4 mt-5 font-semibold tracking-wide text-gray-100 transition-all duration-300 ease-in-out bg-gray-900 rounded-lg hover:bg-white focus:shadow-outline focus:outline-none hover:text-gray-900"  %>
    <% end %>
    <br>
     <div class="divider">
                已經有帳戶？
                <%= link_to "登入", new_session_path(resource_name), class:"border-b border-gray-500 border-dotted" %><br />


              </div>

      </div>
    </div>
  </div>
</div>
<% end %>
<%# end %>
