<%= form_with(model: [post, post.comments.build]) do |f| %>
    <div class="flex form-control">
        <%= f.label :comment, "留言" %>
        <%= f.text_area :content, class:"border border-black w-56 h-16" %>
    </div>
    <%= f.submit "發送留言", class:"btn btn-xs text-white bg-black", data: { turbo: "false" } %>
<% end %>   