<div  data-controller="vditor--vditor" class="pb-16 mt-8 min-h-[100vh]">
  <div class="vditor-container">
    <%= form_with(model: @post, data: { turbo: false }) do |post| %>
      <ul id="errors" class="hidden"></ul>
      <%= post.submit "儲存草稿", data: { action: "click->vditor--vditor#create_post" }, class:"mb-6 bg-indigo-600 text-white inline-block px-4 py-2 mr-4 text-blue-900 border border-blue-900 rounded-md order-blue-500 hover:bg-indigo-700 hover:cursor-pointer hover:text-white" %>

      <%= post.submit "發佈文章", data: { action: "click->vditor--vditor#publish_post" }, class:"mb-6 bg-indigo-600 text-white inline-block px-4 py-2 mr-4 text-blue-900 border border-blue-900 rounded-md order-blue-500 hover:bg-indigo-700 hover:cursor-pointer hover:text-white" %>

      <div class="relative">

        <%= post.text_field :title,id: "post_title", class:"  rounded-sm h-28 border-0 text-center text-4xl shadow-[0_5px_15px_rgba(0,0,0,0.05)] hover:ring-1", placeholder:"文章標題", autocomplete: "off" %>
        <p  class="absolute select-none top-2 left-2 badge badge-lg"  name="currentState"> <%= @post.status %></p>

        <div class="my-4">      
        標籤： <%= post.text_field :tag_list, class:"input input-bordered input-xs w-full max-w-xs", placeholder: "apple, banana, cat" %>
        </div>

      </div>
    </div>
   

    <div id="vditor" ></div>
  
  <% end %>
</div>
