<div class="p-4 my-4 border-2 border-black border-solid rounded" id="<%= dom_id post %>">
  <p class="my-5">
    <strong class="block mb-1 font-medium">Title:</strong>
    <%= post.title %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Datetime:</strong>
    <%= post.created_at %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Content:</strong>
    <%= simple_format post.content %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">User:</strong>
    <%= post.user.email %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Tags:</strong>
    <% post.tags.each do |tag| %>
      <%= link_to tag.name, tag_path(id: tag.id) %>
    <% end %>
  </p>

  <!--
  <% if action_name != "show" %>
    <%= link_to "Show this post", post, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this post', edit_post_path(post), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
  -->
</div>
