<div class="p-4 my-4 border-2 border-black border-solid rounded" id="<%= dom_id post %>">
  <p class="my-5">
    <strong class="block mb-1 font-medium">Title:</strong>
    <%= highlight(post.title, params[:keyword], highlighter: '<mark>\1</mark>') %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Datetime:</strong>
    <%= post.created_at %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Content:</strong>
    <%= highlight(post.content, params[:keyword],highlighter: '<mark>\1</mark>') %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">User:</strong>
    <%= post.user.email %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Tags:</strong>
    <% post.tags.each do |tag| %>
      <%= link_to "# #{tag.name}", tag_path(id: tag.id), class:"p-2" %>
    <% end %>
  </p>

  <div>
    <%= render 'posts/likes', post:@post %>
  </div>
</div>

